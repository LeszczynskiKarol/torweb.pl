// src/components/layout/Footer.astro

import Container from '../ui/Container.astro';

const currentYear = new Date().getFullYear();

const services = [
  { name: 'Strony internetowe', href: '/uslugi/strony-internetowe' },
  { name: 'Sklepy internetowe', href: '/uslugi/sklepy-internetowe' },
  { name: 'Aplikacje webowe', href: '/uslugi/aplikacje-webowe' },
  { name: 'Optymalizacja SEO', href: '/uslugi/seo' },
  { name: 'Wsparcie techniczne', href: '/uslugi/wsparcie' },
];

const company = [
  { name: 'O nas', href: '/o-nas' },
  { name: 'Realizacje', href: '/realizacje' },
  { name: 'Cennik', href: '/cennik' },
  { name: 'Blog', href: '/blog' },
  { name: 'Kontakt', href: '/kontakt' },
];

const legal = [
  { name: 'Polityka prywatności', href: '/polityka-prywatnosci' },
  { name: 'Regulamin', href: '/regulamin' },
  { name: 'RODO', href: '/rodo' },
  { name: 'Cookies', href: '/cookies' },
];

const socialLinks = [
  { 
    name: 'Facebook', 
    href: 'https://facebook.com/torwebpl',
    icon: 'M12 2.04c-5.5 0-10 4.49-10 10.02 0 5 3.66 9.15 8.44 9.9v-7H7.9v-2.9h2.54V9.85c0-2.52 1.49-3.89 3.78-3.89 1.09 0 2.23.19 2.23.19v2.47h-1.26c-1.24 0-1.63.77-1.63 1.56v1.88h2.78l-.45 2.9h-2.33v7a10 10 0 008.44-9.9c0-5.53-4.5-10.02-10-10.02z'
  },
  { 
    name: 'LinkedIn', 
    href: 'https://linkedin.com/company/torweb',
    icon: 'M20.5 2h-17A1.5 1.5 0 002 3.5v17A1.5 1.5 0 003.5 22h17a1.5 1.5 0 001.5-1.5v-17A1.5 1.5 0 0020.5 2zM8 19H5v-9h3zM6.5 8.25A1.75 1.75 0 118.3 6.5a1.78 1.78 0 01-1.8 1.75zM19 19h-3v-4.74c0-1.42-.6-1.93-1.38-1.93A1.74 1.74 0 0013 14.19a.66.66 0 000 .14V19h-3v-9h2.9v1.3a3.11 3.11 0 012.7-1.4c1.55 0 3.36.86 3.36 3.66z'
  },
  { 
    name: 'GitHub', 
    href: 'https://github.com/torweb',
    icon: 'M12 2A10 10 0 002 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z'
  },
];
---

<footer class="footer">
  <Container>
    <!-- Main Footer Content -->
    <div class="footer-main">
      <div class="footer-grid">
        <!-- Company Info -->
        <div class="footer-brand">
          <a href="/" class="footer-logo">
            <svg class="logo-icon" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect width="40" height="40" rx="8" fill="currentColor" class="logo-bg"/>
              <path d="M14 12H26V14H22V28H18V14H14V12Z" fill="white"/>
              <path d="M10 20L12 18V22L10 20Z" fill="white" opacity="0.8"/>
              <path d="M30 20L28 18V22L30 20Z" fill="white" opacity="0.8"/>
            </svg>
            <span class="logo-text">
              <strong>TorWeb</strong>.pl
            </span>
          </a>
          
          <p class="footer-description">
            Profesjonalne tworzenie stron internetowych w Toruniu. 
            15 lat doświadczenia, ponad 50 zrealizowanych projektów.
            Łączymy marketing z najnowszymi technologiami.
          </p>
          
          <div class="footer-contact">
            <a href="tel:+48509370772" class="contact-item">
              <svg width="16" height="16" viewBox="0 0 20 20" fill="none">
                <path d="M2 3C2 2.44772 2.44772 2 3 2H6.15287C6.64171 2 7.0589 2.35341 7.13927 2.8356L7.87858 7.27147C7.95075 7.70451 7.73206 8.13397 7.3394 8.3303L5.79126 9.10437C6.90756 11.8783 9.12168 14.0924 11.8956 15.2087L12.6697 13.6606C12.866 13.2679 13.2955 13.0492 13.7285 13.1214L18.1644 13.8607C18.6466 13.9411 19 14.3583 19 14.8471V18C19 18.5523 18.5523 19 18 19H16C8.26801 19 2 12.732 2 5V3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              +48 509 370 772
            </a>
            <a href="mailto:kontakt@torweb.pl" class="contact-item">
              <svg width="16" height="16" viewBox="0 0 20 20" fill="none">
                <path d="M3 5C3 3.89543 3.89543 3 5 3H15C16.1046 3 17 3.89543 17 5V15C17 16.1046 16.1046 17 15 17H5C3.89543 17 3 16.1046 3 15V5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M3 5L10 10L17 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              kontakt@torweb.pl
            </a>
            <span class="contact-item">
              <svg width="16" height="16" viewBox="0 0 20 20" fill="none">
                <path d="M17.65 6.35C16.2 2.45 12.71 0 10 0C7.29 0 3.8 2.45 2.35 6.35C0.68 10.85 2.53 14.62 5.47 17.56L10 22l4.53-4.44C17.47 14.62 19.32 10.85 17.65 6.35zM10 12C8.34 12 7 10.66 7 9C7 7.34 8.34 6 10 6C11.66 6 13 7.34 13 9C13 10.66 11.66 12 10 12Z" fill="currentColor"/>
              </svg>
              Toruń, Kujawsko-Pomorskie
            </span>
          </div>
        </div>
        
        <!-- Services Links -->
        <div class="footer-column">
          <h3 class="footer-heading">Usługi</h3>
          <ul class="footer-links">
            {services.map(link => (
              <li>
                <a href={link.href}>{link.name}</a>
              </li>
            ))}
          </ul>
        </div>
        
        <!-- Company Links -->
        <div class="footer-column">
          <h3 class="footer-heading">Firma</h3>
          <ul class="footer-links">
            {company.map(link => (
              <li>
                <a href={link.href}>{link.name}</a>
              </li>
            ))}
          </ul>
        </div>
        
        <!-- Newsletter -->
        <div class="footer-column">
          <h3 class="footer-heading">Newsletter</h3>
          <p class="newsletter-text">
            Otrzymuj porady i nowości ze świata web developmentu
          </p>
          <form class="newsletter-form" action="/newsletter" method="POST">
            <input 
              type="email" 
              name="email" 
              placeholder="Twój email" 
              required
              aria-label="Email do newslettera"
            />
            <button type="submit" aria-label="Zapisz się">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M7 10H13M13 10L10 7M13 10L10 13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
          </form>
          
          <div class="footer-social">
            <span class="social-label">Obserwuj nas:</span>
            <div class="social-links">
              {socialLinks.map(social => (
                <a 
                  href={social.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={social.name}
                  class="social-link"
                >
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d={social.icon} />
                  </svg>
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <div class="footer-copyright">
          <p>© {currentYear} TorWeb.pl. Wszystkie prawa zastrzeżone.</p>
          <p>NIP: 8792731215 | REGON: 123456789</p>
        </div>
        
        <div class="footer-legal">
          {legal.map((link, index) => (
            <>
              <a href={link.href}>{link.name}</a>
              {index < legal.length - 1 && <span class="separator">•</span>}
            </>
          ))}
        </div>
      </div>
    </div>
  </Container>
</footer>

<style>
  .footer {
    background: var(--color-dark);
    color: var(--color-gray-300);
    margin-top: var(--space-3xl);
  }

  .footer-main {
    padding: var(--space-3xl) 0 var(--space-2xl);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr;
    gap: var(--space-2xl);
  }

  /* Brand Section */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .footer-logo {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.5rem;
    color: white;
    text-decoration: none;
  }

  .logo-icon {
    width: 3rem;
    height: 3rem;
    color: var(--color-primary);
  }

  .logo-text {
    font-weight: 700;
  }

  .footer-description {
    line-height: 1.7;
    color: var(--color-gray-400);
  }

  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .contact-item {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-gray-400);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .contact-item:hover {
    color: var(--color-primary);
  }

  .contact-item svg {
    flex-shrink: 0;
  }

  /* Footer Columns */
  .footer-column {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .footer-heading {
    font-size: var(--text-lg);
    font-weight: 600;
    color: white;
    margin-bottom: var(--space-sm);
  }

  .footer-links {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .footer-links a {
    color: var(--color-gray-400);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer-links a:hover {
    color: var(--color-primary);
  }

  /* Newsletter */
  .newsletter-text {
    color: var(--color-gray-400);
    font-size: var(--text-sm);
  }

  .newsletter-form {
    display: flex;
    gap: 0;
    background: var(--color-gray-800);
    border-radius: var(--radius-lg);
    overflow: hidden;
    border: 1px solid var(--color-gray-700);
    transition: border-color var(--transition-fast);
  }

  .newsletter-form:focus-within {
    border-color: var(--color-primary);
  }

  .newsletter-form input {
    flex: 1;
    padding: 0.75rem 1rem;
    background: transparent;
    border: none;
    color: white;
    font-size: var(--text-sm);
    outline: none;
  }

  .newsletter-form input::placeholder {
    color: var(--color-gray-500);
  }

  .newsletter-form button {
    padding: 0 1rem;
    background: var(--color-primary);
    border: none;
    color: white;
    cursor: pointer;
    transition: background var(--transition-fast);
  }

  .newsletter-form button:hover {
    background: var(--color-primary-dark);
  }

  /* Social Links */
  .footer-social {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    margin-top: var(--space-md);
  }

  .social-label {
    font-size: var(--text-sm);
    color: var(--color-gray-400);
  }

  .social-links {
    display: flex;
    gap: var(--space-sm);
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: var(--color-gray-800);
    border-radius: var(--radius-lg);
    color: var(--color-gray-400);
    transition: all var(--transition-fast);
  }

  .social-link:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-2px);
  }

  /* Footer Bottom */
  .footer-bottom {
    padding: var(--space-lg) 0;
    border-top: 1px solid var(--color-gray-800);
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-lg);
  }

  .footer-copyright {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .footer-copyright p {
    margin: 0;
    font-size: var(--text-sm);
    color: var(--color-gray-500);
  }

  .footer-legal {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .footer-legal a {
    color: var(--color-gray-500);
    text-decoration: none;
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
  }

  .footer-legal a:hover {
    color: var(--color-primary);
  }

  .separator {
    color: var(--color-gray-600);
    font-size: var(--text-sm);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }

    .footer-bottom-content {
      flex-direction: column;
      align-items: flex-start;
    }

    .footer-legal {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-xs);
    }

    .separator {
      display: none;
    }
  }
</style>